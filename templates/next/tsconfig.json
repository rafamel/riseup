{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@riseup/tooling/static/tsconfig.json",
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@root/*": ["./src/*"]
    }
  }
}
