{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@riseup/tooling/static/tsconfig.json",
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "noEmit": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"],
      "@static/*": ["../public/static/*"]
    }
  }
}
