{
  "$schema": "https://json.schemastore.org/prettierrc",
  "tabWidth": 2,
  "useTabs": false,
  "endOfLine": "lf",
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "always",
  "proseWrap": "never",
  "overrides": [
    {
      "files": [
        "**/*.md",
        "**/docs/**/*",
        "**/{lib,pkg,out,dist,build,vendor,deploy,coverage}/**/*",
        "**/{.cache,.vscode,.vercel,.tsup,node_modules}/**/*"
      ],
      "options": {
        "parser": "ignores",
        "plugins": ["./config/prettier.plugin.mjs"]
      }
    }
  ]
}
